{
  "manifest_version": 2,
  "author": "Yannis Gravezas <wizgrav@gmail.com>",
  "name": "Acid Lick",
  "version": "0.1.0",
  "description": "Lick your YouTube videos",
 
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
  }],

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png" 
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup.html"
  }
 
}